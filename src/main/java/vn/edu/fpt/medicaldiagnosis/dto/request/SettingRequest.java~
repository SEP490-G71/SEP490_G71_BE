package vn.edu.fpt.medicaldiagnosis.dto.request;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotEmpty;
import jakarta.validation.constraints.Size;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;

import java.util.List;

@Getter
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class SettingRequest {
    @NotBlank(message = "Tên bệnh viện không được để trống")
    private String hospitalName;

    @NotBlank(message = "Số điện thoại bệnh viện không được để trống")
    @Size(min = 8, max = 15, message = "Số điện thoại phải từ 8 đến 15 ký tự")
    private String hospitalPhone;

    @NotBlank(message = "Email bệnh viện không được để trống")
    @Email(message = "Email không đúng định dạng")
    private String hospitalEmail;

    @NotBlank(message = "Địa chỉ bệnh viện không được để trống")
    private String hospitalAddress;

    private String bankAccountNumber;

    private String bankCode;

    @NotEmpty(message = "Danh sách số bản ghi phân trang không được để trống")
    private List<Integer> paginationSizeList;
}

